<form action="<%= users_url %>" method="post">
  <h2>SIGN UP</h2>
  <label>
    Email:
    <input type="text" name="user[email]">
  </label>
  <br>
  <label>
    Password:
    <input type="password" name="user[password]">
  </label>
  <br>
  <% unless logged_in? %>
  <input type="submit" value="SIGN UP">
  <% end %>
</form>
